<div class="collaborator-heading">
    <h1>Add or Remove User as Collaborator</h1>
</div>
<div class="container">
    <table class="table table-striped">
        <% @collaborators.each do |c| %>
            <tr>
                <td><h5><%= c.email %></h5></td>
                
                    <td><%= link_to "Remove Collaborator", @collaborator, method: :destroy, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to remove this collaborator?'} %></td>
                
                    <td><%= link_to "Add Collaborator", @collaborator, method: :create, class: 'btn btn-success' %></td>
                
            </tr>
        <% end %>
    </table>
</div>
